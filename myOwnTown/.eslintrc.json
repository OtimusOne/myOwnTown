{
  "root": true,
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb",
    "prettier",
    "prettier/flowtype",
    "prettier/react",
    "prettier/standard",
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "react", "react-native", "prettier", "standard"],
  "overrides": [
    {
      "files": ["__tests__/*.js"],
      "rules": {
        "require-jsdoc": "off"
      }
    }
  ],
  "rules": {
    "no-use-before-define": "off",
    "no-unused-vars": "off",
    "comma-dangle": "off",
    "react/jsx-filename-extension": "off",
    "react/destructuring-assignment": "off",
    "no-param-reassign": "off",
    "one-var": "off",
    "no-cond-assign": "off",
    "no-plusplus": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"],
        "paths": ["./src"]
      }
    }
  }
}
